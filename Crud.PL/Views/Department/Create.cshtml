@model DepartmentVM

@{
    ViewData["Title"] = "Create";
}

<div class="block-header">
   <h2>Create</h2>
</div>

<form asp-action="Create" asp-controller="Department">

    <label asp-for="Name">Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label asp-for="Code">Code</label>
    <input type="text" asp-for="Code" class="form-control" />
    <span asp-validation-for="Code" class="text-danger"></span>
    <br />
    <center>
        <input type="submit" class="btn btn-info" value="Save" />
        <a asp-action="Index" asp-controller="Department" class="btn btn-warning">return</a>
    </center>
</form>

@section JqueryValidation{
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}