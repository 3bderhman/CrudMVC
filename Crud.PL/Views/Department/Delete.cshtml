@model DepartmentVM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}

<div class="block-header">
   <h2>Delete</h2>
</div>

<form asp-action="Delete" asp-controller="Department">
    <input type="hidden" asp-for="Id" class="form-control" />
    <br />
    <label asp-for="Name">Name</label>
    <input type="text" asp-for="Name" class="form-control" readonly />
    <br />
    <label asp-for="Code">Code</label>
    <input type="text" asp-for="Code" class="form-control" readonly />
    <br />
    <center>
        <input type="submit" class="btn btn-danger" value="Delete"/>
        <a asp-action="Index" asp-controller="Department" class="btn btn-warning">return</a>
    </center>
</form>